<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/th"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/cart_group_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cart_group_item_selected"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:text="小王水果店"
        android:textSize="@dimen/tv_size_normal" />

    <CheckBox
        android:id="@+id/cart_group_item_selected"
        android:layout_width="@dimen/cb_size"
        android:layout_height="@dimen/cb_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/check_box_selector"
        android:button="@null" />

</RelativeLayout>