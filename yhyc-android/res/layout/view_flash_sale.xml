<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flash_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/flash_sale_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="每日团"
                android:textColor="@color/font_note"
                android:textSize="@dimen/tv_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="@color/red" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >

                
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/flash_sale_timer"
            android:layout_width="0dip"
            android:layout_height="55dip"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="3"
            android:background="@color/orange" >

            <TextView
                android:id="@+id/timer_hour_l"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_hour_r"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/timer_hour_l"
                android:background="@color/white"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_sep_1"
                android:layout_width="15dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/timer_hour_r"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_min_l"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/timer_sep_1"
                android:background="@color/white"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_min_r"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/timer_min_l"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_sep_2"
                android:layout_width="15dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/timer_min_r"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_sec_l"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/timer_sep_2"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/tv_size_large" />

            <TextView
                android:id="@+id/timer_sep_r"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/timer_sec_l"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/tv_size_large" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flash_sale_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_sale_info"
        android:layout_marginTop="20dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/category_fruit" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/flash_sale_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="澳大利亚进口 精选橙子 15/盒 3.3kg以上"
                android:textSize="@dimen/tv_size_normal" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" >

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dip"
                    android:text="￥3.6"
                    android:textColor="@color/price_red"
                    android:textSize="@dimen/tv_size_normal" />

                <TextView
                    android:id="@+id/product_origin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/product_price"
                    android:text="￥4.5"
                    android:textSize="@dimen/tv_size_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_green_default"
                android:gravity="center" >

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/cart_nor" >
                </ImageView>

                <TextView
                    android:id="@+id/flash_sale_addtocart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="立即抢购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>