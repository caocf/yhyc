<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_login_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/user_not_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_login"
        android:gravity="center"
        android:text="@string/label_not_login"
        android:textSize="@dimen/tv_size_normal" />

    <Button
        android:id="@+id/user_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:background="@drawable/btn_default_selector"
        android:text="@string/label_login"
        android:textColor="#454545"
        android:textSize="@dimen/tv_size_normal" />

</LinearLayout>