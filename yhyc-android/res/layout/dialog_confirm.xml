<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirmdialog_title"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/actionbar"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/tv_size_20sp" />

    <TextView
        android:id="@+id/confirmdialog_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:textColor="#000000"
        android:textSize="@dimen/tv_size_normal" />

    <LinearLayout
        android:id="@+id/confirmdialog_buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/confirmdialog_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_default"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_normal" />

        <Button
            android:id="@+id/confirmdialog_btn_ok"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/btn_green_default"
            android:text="@string/btn_OK"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_normal" />
    </LinearLayout>

</LinearLayout>