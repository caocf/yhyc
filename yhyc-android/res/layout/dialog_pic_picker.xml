<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/picdialog_title"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/actionbar"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/tv_size_20sp" />

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:id="@+id/picdialog_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/picdialog_loadpic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/icon_loadpic"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_normal" />

        <ImageButton
            android:id="@+id/picdialog_camera"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="50dip"
            android:background="@drawable/icon_camera"
            android:text="@string/btn_OK"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_normal" />
    </LinearLayout>

</LinearLayout>