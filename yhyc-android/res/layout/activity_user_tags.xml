<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.aug3.yhyc.view.ActionBarNormalView
        android:id="@+id/actionbar_usertags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.aug3.yhyc.view.ActionBarNormalView>

    <LinearLayout
        android:id="@+id/usertags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_usertags"
        android:layout_margin="20.0dip"
        android:orientation="vertical" >

        <com.aug3.yhyc.view.AutoScaleViewGroup
            android:id="@+id/user_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_size_normal" />
    </LinearLayout>

</RelativeLayout>