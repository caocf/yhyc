<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="130dip" >

        <ImageView
            android:id="@+id/show_iv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ad002" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text="套餐组合"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="10dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/border_gray" >

            <TextView
                android:id="@+id/product_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:text="￥36"
                android:textColor="@color/price_red"
                android:textSize="@dimen/tv_size_normal" />

            <TextView
                android:id="@+id/product_mp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/product_pp"
                android:text="￥45"
                android:textSize="@dimen/tv_size_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/border_gray" >

            <Button
                android:id="@+id/confirmdialog_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_orange_default"
                android:text="@string/btn_snapped_up"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_normal" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>