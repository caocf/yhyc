<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="111dip"
        android:layout_height="111dip" >

        <ImageView
            android:id="@+id/gallery_item_image"
            android:layout_width="110dip"
            android:layout_height="110dip"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/gallery_item_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gallery_item_title"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:text="title"
        android:textSize="@dimen/tv_size_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/gallery_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥3.6"
            android:textColor="@color/red"
            android:textSize="@dimen/tv_size_small" />

        <TextView
            android:id="@+id/gallery_item_orgin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="￥4.5"
            android:textSize="@dimen/tv_size_small" />
    </LinearLayout>

</LinearLayout>